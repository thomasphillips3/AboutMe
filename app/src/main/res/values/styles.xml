<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NameStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:layout_marginTop">@dimen/layout_margin</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AboutMeStyle" parent="NameStyle">
        <item name="android:lineSpacingMultiplier">@dimen/line_spacing</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/layout_margin</item>
    </style>

    <style name="EditTextStyle" parent="NameStyle">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">@android:color/holo_green_light</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>